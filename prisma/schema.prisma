// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String  @id @default(uuid())
  Name     String
  Branch   Int
  Adm      Boolean
  Password String

  config Config[]

  contacts Contacts[]

  calls Calls[]
}

model Config {
  id     String  @id @default(uuid())
  Color  String
  Ring   String
  User   User?   @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId String?
}

model Contacts {
  id     String @id @default(uuid())
  Name   String
  Number Int

  user User[]
}

model Calls {
  id     String  @id @default(uuid())
  Number String
  User   User?   @relation(fields: [userId], references: [id])
  userId String?
}
